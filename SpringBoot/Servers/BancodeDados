---IR PARA SLIDES AULA 2 sobre DDL---------------------------------------------------

 LIMPE SEU SCRIPT MAS NÃO APAGUE A TABELA
 <!--DDL COMANDO RENAME E ALTER-->
create table clientes (
codigo_cliente int not null primary key,
nome varchar (50),
cidade varchar (10),
serie char (1)
);
<!--Ver-->
describe clientes;
<!--Rename DDL-->
RENAME TABLE clientes TO alunos;
<!--ADD DDL-->
ALTER TABLE alunos ADD email VARCHAR(60);
<!--Ver-->
describe alunos;
<!--Colocar a série com mais de uma informação-->2
Insert into alunos values 
(1, 'Daniela','São Paulo', 1,'set.dan@gmail.com'),
(2,'Fred Silva', 'São Paulo', 25, 'fred.silva@gmail.com.br');
<!--Ver-->
select * from alunos;
<!--apagar coluna-->
alter table alunos
drop column email;
<!--ver desc-->
describe alunos;
<!--Adicionar depois do nome-->
ALTER TABLE alunos ADD profissao VARCHAR(60) after nome;
<!--ver-->
describe alunos;
<!--Adicionar depois do nome-->
ALTER TABLE alunos ADD nascimento date after profissao;
<!--ver-->
describe alunos;
<!--Adicionar no começo-->
ALTER TABLE alunos ADD apelido varchar(10) first;
<!--ver-->
describe alunos;
<!--apagar coluna-->
alter table alunos
drop column apelido;
<!--ver desc-->
describe alunos;
<!--Modificar as variáveis-->
alter table alunos
modify column nome varchar(60);
<!--ver desc----ver se tem o campo profissao-->
describe alunos;
<!-- Mudar o nome do campo-->
alter table alunos
change column profissao cargo varchar(10);
<!--Renomear-->
RENAME TABLE alunos TO estudantes;

