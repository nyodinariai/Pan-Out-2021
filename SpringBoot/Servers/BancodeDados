------------------------IR PARA SLIDES AULA 3---------------------------------------------
create table produtos (
nome varchar(30) not null unique,
descricao text,
quantidade int UNSIGNED,
preco decimal(4,2),
data date 
);
<!-- atualizar e ver que tem duas tabelas-->
<!-- Alterar adicionando em várias posições -->
alter table produtos add column codigo_produto int first;
describe produtos;
alter table produtos add primary key(codigo_produto);
ALTER TABLE produtos ADD parcelas int after preco;
describe produtos;
 <!--verificar unique-->
describe produtos;
<!--modify-->
alter table produtos modify column nome char(10);
describe produtos;
alter table produtos modify column descricao char(100);
<!--Drop column-->
alter table produtos drop column descricao;
alter table produtos drop column parcelas;
<!--Drop table-->
drop table produtos;
drop table produtos;
<!--change-->
alter table produtos change column nome ITEM varchar(10);
describe produtos;
alter table produtos change ITEM nome item varchar(10);
    <!-- tirar o máiusculo-->
alter table produtos change ITEM item varchar(10);
    <!--Mudar quantidade para QTD-->
alter table alunos change column quantidade QTD int UNSIGNED;

----------------------Aula 4 delete, update
create database aula8;
use aula8;
create table matriculados (
        id_curso int,
		nome varchar(30),
		descricao varchar(30),
		carga char(10),
		totalaulas int,
		ano int,		
		primary key (id_curso));
		
<!--Colocar informações -->
Insert into matriculados values
 ('1','HTML', 'Curso de HTML5','40','37','2017'),
 ('2','CSS', 'Curso de CSS3','20','15','2017'),
 ('3','PHOTOSHOP', 'Curso de Photoshop','10','8','2018'),
 ('4','JAVASCRIPT', 'Curso de JS','40','20','2018');
 
 <!--atualizar-->
 UPDATE matriculados
 SET nome = 'HTML5'
 where id_curso = '1';
 
select * from matriculados;

<!--Mudar duas informações por vez -->
 UPDATE matriculados
 SET nome = 'CSS3', ano = '2018'
 where id_curso = '2';
 
 
 <!-- MUDAR 2017 PARA 2018--, EDIT PEREFERNCES SEGURE SAVE DESATIVAR-->
  
 UPDATE matriculados
 SET  ano = '2018'
 where ano = '2017';
 
 select * from matriculados;
 
 UPDATE matriculados
 SET  ano = '2017'
 where ano = '2018'
 LIMIT 1;
 
 select * from matriculados;
 
 UPDATE matriculados
 SET  ano = '2020'
 where ano < '2019';
 
 
 <!--diferença entre deletar linhas e colunas -->
 
 alter table matriculados drop column totalaulas;	
  
DELETE FROM matriculados
WHERE id_curso = '2';

<!--DELETAR VÁRIOS POR VEZ-->
DELETE FROM matriculados
WHERE carga = '40';

<!-- Deletar tudo de uma vez só -->
TRUNCATE table matriculados;
select * from matriculados;

<Diferenciação //Drop table (apaga inclusive a estrutura) e truncate table (apagar os dados e mantém a estrutura)>




